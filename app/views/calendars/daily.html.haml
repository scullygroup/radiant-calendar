.heading
  %h1
    Calendar
    
.content

  .main-heading
    %h1
      - dateheading = DateTime.strptime("#{params[:id]}T00:00:00+00:00")
      = dateheading.strftime("%B %Y")
  
  #ical-export 
    = link_to "Export to iCalendar", "/marketing/daily_events/#{params[:id]}"   
  .clear

  - @daily_events.sort.each do |start_date, events|
    
    - mydate = DateTime.strptime("#{params[:id]}T00:00:00+00:00")
    
    #event-headline
      .event-day
        = mydate.strftime("%a").upcase
      
      .event-date
        = mydate.strftime("%B %d").upcase
        - for event in events
          - if event.end_date.strftime("%B %d") > mydate.strftime("%B %d")
            thru
            = event.end_date.strftime("%B %d").upcase
    .clear
    
    #calendar-content
      - for event in events
        %h1.event
          = link_to event.event.upcase, "/marketing/calendars/#{event.id}", :rel => 'facebox'
  
        .clear
  
        %p
          = event.description